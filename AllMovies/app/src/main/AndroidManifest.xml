<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.yundon.allmovies">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movie_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movie_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AllMovies" >

        <activity android:name="ru.yundon.allmovies.ui.main.MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="ru.yundon.allmovies.ui.postermovie.PosterMovieActivity" android:exported="false"/>
    </application>


</manifest>